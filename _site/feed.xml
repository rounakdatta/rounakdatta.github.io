let myLocation = &quot;&quot;;

function getLocationDetails() {
$.get(&quot;https://json.geoiplookup.io/&quot;, function (response) {
    myLocation = response;
});
}

function likeItem() {
  getLocationDetails();

  setTimeout(function(){

  var xhr = new XMLHttpRequest();
