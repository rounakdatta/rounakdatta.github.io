---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Rounak Datta's personal website" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <title>{title} | Rounak Datta</title>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=EB+Garamond:ital,wght@0,400;0,500;0,600;1,400;1,500&family=JetBrains+Mono:wght@400&display=swap" rel="stylesheet" />
  <link rel="alternate" type="application/rss+xml" title="RSS Feed" href="/rss.xml" />
  <slot name="head" />
</head>
<body>
  <div class="page-wrapper">
    <header>
      <nav class="main-nav">
        <a href="/" class="site-title no-external">Rounak Datta</a>
        <div class="nav-links">
          <a href="/projects" class="no-external"><span class="nav-icon">⧉</span> Projects</a>
          <a href="/notes" class="no-external"><span class="nav-icon">✐</span> Notes</a>
          <a href="/photos" class="no-external"><span class="nav-icon">◻</span> Photos</a>
        </div>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer>
      <span class="footer-attribution">
        <span class="no-copyright">©</span>
        Human ideated, Claude coded
      </span>
      <span class="footer-sep mobile-hide">·</span>
      <span class="footer-links">
        <a href="https://github.com/rounakdatta">GitHub</a>
        <span class="footer-sep">/</span>
        <a href="https://twitter.com/rounakdatta12">Twitter</a>
        <span class="footer-sep">/</span>
        <a href="https://www.linkedin.com/in/rounakdatta/">LinkedIn</a>
      </span>
    </footer>
  </div>
<script>
  // Open external links in new tab
  document.querySelectorAll('a[href^="http"]').forEach(link => {
    if (!link.href.includes(window.location.hostname)) {
      link.setAttribute('target', '_blank');
      link.setAttribute('rel', 'noopener noreferrer');
    }
  });
</script>
</body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
