---
import BaseLayout from '../layouts/BaseLayout.astro';

// For now, we'll manually list some photos
// Later you can make this dynamic with a photos collection
const photos = [
  { src: '/images/trek/peak_done.jpeg', alt: 'Trek peak', caption: 'Summit achieved' },
  { src: '/images/trek/mountains_day_1.jpeg', alt: 'Mountains', caption: 'First day views' },
  { src: '/images/trek/snow_all_along.jpeg', alt: 'Snowy trail', caption: 'Snow trail' },
  { src: '/images/trek/view_from_the_tent.jpeg', alt: 'Tent view', caption: 'Morning from the tent' },
];
---

<BaseLayout title="Photos" description="Photography and visual memories">
  <div class="photos-page">
    <h1>Photos</h1>
    <p>WDYM one needs Instagram to have a colourful life?</p>

    <div class="photo-grid">
      {photos.map(photo => (
        <figure class="photo-item">
          <img src={photo.src} alt={photo.alt} loading="lazy" />
          {photo.caption && <figcaption>{photo.caption}</figcaption>}
        </figure>
      ))}
    </div>

  </div>
</BaseLayout>

<style>
  .photos-page {
    max-width: var(--content-width);
    margin: 0 auto;
  }

  .photos-page h1 {
    margin-top: 0;
  }

  .photo-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1.5rem;
    margin-top: 2rem;
  }

  .photo-item {
    margin: 0;
  }

  .photo-item img {
    width: 100%;
    height: 220px;
    object-fit: cover;
    border-radius: 6px;
    transition: transform 0.2s ease;
  }

  .photo-item img:hover {
    transform: scale(1.02);
  }

  .photo-item figcaption {
    margin-top: 0.5rem;
    text-align: left;
  }
</style>
